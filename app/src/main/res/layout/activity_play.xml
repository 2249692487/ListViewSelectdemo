<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.alivc.testmediaplayer.MainActivity"
    android:padding="0dp"
    android:id="@+id/container"
    style="@android:style/Theme.NoTitleBar.Fullscreen">
<Button
    android:id="@+id/btn_qiehuan"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:text="qieghuan"
    android:onClick="true"/>
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:id="@+id/GLViewContainer"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        >
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:background="#00FFFFFF"
        android:id="@+id/Title"
        android:textAlignment="center"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="标题"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/video_title"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_below="@+id/GLViewContainer"
        android:id="@+id/LayoutTip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Buffering"
            android:id="@+id/text_tip"
            android:gravity="center_horizontal"
            android:textColor="#00AA00"
            android:visibility="gone"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/decoder_type"
        android:layout_below="@+id/LayoutTip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        >
        <!--<RelativeLayout-->
            <!--android:layout_width="160dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:layout_alignEnd="@+id/tool_bar"-->
            <!--android:layout_alignRight="@+id/tool_bar"-->
            <!--android:layout_below="@+id/LayoutTip">-->
        <FrameLayout
            android:layout_alignEnd="@+id/tool_bar"
            android:layout_alignRight="@+id/tool_bar"
            android:layout_below="@+id/LayoutTip"
            android:id="@+id/GLViewContainer1"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_x="20dp"
            android:layout_y="5dp"
            android:background="@android:color/transparent"
            android:clickable="true">
            <!--<FrameLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:id="@+id/fr_play_contant"></FrameLayout>-->
        </FrameLayout>
            <!--</RelativeLayout>-->
    </WebView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/error_layout"
        android:background="#00FFFFFF"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="错误:"
            android:id="@+id/error_info"
            android:visibility="gone"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLayout"
        android:gravity="center|center_horizontal"
        android:background="#00FFFFFF"
        android:visibility="gone"
        android:layout_below="@+id/LayoutTip"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pause_button"
            android:src="@drawable/vp_pause"
            android:layout_gravity="center"
            android:visibility="visible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重播"
            android:id="@+id/replay_button"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
    </LinearLayout>
<!--声音播放器进度条-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignBottom="@id/GLViewContainer"
        android:id="@+id/progress_layout"
        android:background="#00000000"
        android:layout_marginBottom="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="00:00"
            android:id="@+id/current_duration"
            android:background="#00FFFFFF"
            android:layout_marginTop="5dp"
            android:textColor="#CCCCCC"
            android:paddingLeft="2dp"
            android:gravity="right" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/seek_thumb"
            android:max="100000000"
            android:thumbOffset="1dip"
            android:maxHeight="6dp"
            android:minHeight="6dp"
            android:layout_weight="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:progress="0"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="00:00"
            android:id="@+id/total_duration"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:textColor="#CCCCCC"
            android:paddingRight="2dp" />
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="djfaldflsfj"
            android:id="@+id/decoder_type"
            android:visibility="gone"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:textColor="#CCCCCC"
            android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/loadURL"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="聊天"
        android:textColor="@color/text_color_no_selected"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
